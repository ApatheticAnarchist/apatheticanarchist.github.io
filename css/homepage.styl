$color-blue	= #0efd

*
	margin	0
	padding	0

html
	background			#001
	background-image	linear-gradient( 180deg, #fff1 0, #fff1 1px, transparent 1px, transparent 100% )
	background-repeat	repeat
	background-size		0.5rem 0.5rem
	height				100%

body
	align-items		center//flex-end
	display			flex
	font-family		Roboto Mono, monospace
	justify-content	center
	min-height		100%
	position		relative

svg
	max-height	100vh
	max-width	100vw

#contents
	display	none


:focus
	outline	none

::-moz-focus-inner
	border	none
	outline	none



.wheel-canvas
	fill			none
	
	stroke			$color-blue
	stroke-width	2
	stroke-linejoin	round
	
	filter	url(#smallglow)
	


.wheel-node
	color	$color-blue
	cursor	pointer
	transition	color 0.5s

.wheel-node:hover/*,
.wheel-node:focus*/
	color	lighten( $color-blue, 75% )

.wheel-node:active
	color	yellow

.wheel-node path
	stroke	currentColor

.wheel-node--title
	fill			currentColor
	font-size		12px
	//font-weight		bold
	//start-offset	50%
	stroke			none
	//text-anchor		middle

.wheel-node .wheel-node--clicker
	fill	#0000
	stroke	none !important


.wheel circle
	transition	stroke-dashoffset 2s linear

.wheel circle.show
	transition	stroke-dashoffset 1s linear

.wheel-node
	transition	transform 1s

.wheel-node path
	transition	stroke-dashoffset 0.5s 0.75s linear

.wheel-node text,
.wheel-node use
	opacity		0
	transition	opacity 0.5s ease-in

.wheel circle.show,
.wheel-node.show path
	stroke-dashoffset	0

.wheel-node.show path
	transition	stroke-dashoffset 0.5s linear

.wheel-node.show text,
.wheel-node.show use
	transition	opacity 0.5s 0.75s ease-in
	opacity		1



.wheel-node--modal
	position	absolute
	top			50%
	left		50%
	transform	translate( -50%, -50% )
	
	background		alpha( $color-blue, 25% )
	border			solid $color-blue
	border-width	0.125rem 0
	box-sizing		border-box
	color			$color-blue
	font-size		0.75rem
	max-width		20rem
	padding			0
	
	height		0.375rem
	width		0
	overflow	hidden
	transition	width 0.25s 0.125s, padding-left 0.25s 0.125s, padding-right 0.25s 0.125s
				, height 0.125s, padding-top 0.125s, padding-bottom 0.125s

.wheel-node--modal.show
	height	20rem
	padding	0.75rem
	width	20rem
	transition	width 0.25s, padding-left 0.25s, padding-right 0.25s
				, height 0.125s 0.25s, padding-top 0.125s 0.25s, padding-bottom 0.125s 0.25s
